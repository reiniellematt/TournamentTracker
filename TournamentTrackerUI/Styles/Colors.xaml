<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TournamentTrackerUI.Styles">

    <Color x:Key="MainForeground">#3498DB</Color>
    <SolidColorBrush x:Key="MainForegroundBrush" Color="{StaticResource MainForeground}"/>

    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MainLabelStyle}">
        <Setter Property="Foreground" Value="{StaticResource MainForegroundBrush}"/>
    </Style>

    <Style BasedOn="{StaticResource MainButtonStyle}" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="{StaticResource MainForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="#707070"/>
    </Style>

</ResourceDictionary>